{
  "name": "browsability",
  "description": "browsability",
  "version": "0.1.0",
  "author": {
    "name": "Jonathan Marsh",
    "email": "hello@jonmarsh.dev",
    "url": "https://www.jonmarsh.dev"
  },
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "j-m/browsability",
  "bugs": "https://github.com/j-m/browsability/issues",
  "homepage": "https://github.com/j-m/browsability",
  "keywords": [
    "browser",
    "compatibility",
    "analyser",
    "html",
    "css",
    "javascript"
  ],
  "engines": {
    "node": ">=10.0.0"
  },
  "bin": {
    "browsability": "./bin/run"
  },
  "files": [
    "/bin",
    "/lib"
  ],
  "scripts": {
    "changelog": "conventional-changelog -p angular -i docs/CHANGELOG.md -s",
    "build": "tsc --project config/tsconfig.json",
    "commit": "cz",
    "lint:syntax": "eslint --fix -c ./config/.eslintrc ./src ./test --ext .ts",
    "lint:format": "prettier --write  --config ./config/.prettierrc ./src/**/*.ts ./test/**/*.ts",
    "lint": "npm run lint:syntax && npm run lint:format",
    "test:unit": "jest --config=config/jest.config.js",
    "test:integration": "npm unlink && npm link && browsability --config ./docs/ && npm unlink",
    "test": "npm run test:unit && npm run test:integration",
    "prepare": "husky install config/husky"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@mdn/browser-compat-data": "^3.3.2",
    "css": "^3.0.0",
    "fast-glob": "^3.2.5",
    "htmlparser2": "^6.1.0"
  },
  "devDependencies": {
    "@types/css": "0.0.31",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.1",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "commitizen": "^4.2.3",
    "conventional-changelog-cli": "^2.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  }
}
