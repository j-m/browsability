{
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "../lib",
    "declarationDir": "../typings",
    "rootDir": ".",
    "baseUrl": ".",
    "target": "es5",
    "lib": ["es5"],
    "declaration": true,
    "esModuleInterop": false,
    "sourceMap": false,
    "importHelpers": true,
    "resolveJsonModule": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "removeComments": true
  },
  "include": ["**/*.ts"],
  "exclude": ["**/*.spec.ts"],
  "files": ["index.ts"]
}
