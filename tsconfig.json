{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "esnext",
    "outDir": "lib",
    "declarationDir": "typings",
    "rootDir": "src",
    "baseUrl": "src",
    "target": "es5",
    "lib": ["es5", "es6", "dom"],
    "declaration": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "importHelpers": true,
    "resolveJsonModule": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "removeComments": true
  },
  "include": ["src/**/*.ts"],
  "files": ["src/index.ts"]
}
